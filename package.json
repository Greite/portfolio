{
  "name": "portfolio",
  "version": "2.0.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "prestart": "cp -R .next/static/ .next/standalone/.next/static/ && cp -R public/ .next/standalone/public/",
    "start": "node .next/standalone/server.js",
    "prod": "pnpm build && pnpm start",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx --config eslint.config.mjs",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix --config eslint.config.mjs",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "autofix": "pnpm format && pnpm lint:fix"
  },
  "dependencies": {
    "@chakra-ui/react": "^3.24.2",
    "@emotion/react": "^11.14.0",
    "@fontsource/raleway": "^5.2.6",
    "dayjs": "^1.11.13",
    "next": "^15.4.6",
    "next-themes": "^0.4.6",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-icons": "^5.5.0"
  },
  "devDependencies": {
    "@chakra-ui/cli": "^3.24.2",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.33.0",
    "@stylistic/eslint-plugin": "^5.2.3",
    "@types/node": "^22.17.1",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@typescript-eslint/eslint-plugin": "^8.39.1",
    "@typescript-eslint/parser": "^8.39.1",
    "eslint": "^9.33.0",
    "eslint-config-next": "15.3.4",
    "eslint-config-prettier": "^10.1.8",
    "eslint-config-turbo": "^2.5.5",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-next": "^0.0.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2"
  },
  "prettier": {
    "singleQuote": true,
    "endOfLine": "lf",
    "semi": false,
    "trailingComma": "all",
    "useTabs": false,
    "bracketSpacing": true,
    "printWidth": 120
  }
}
