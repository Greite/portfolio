{
  "name": "portfolio",
  "version": "2.0.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "prestart": "cp -R .next/static/ .next/standalone/.next/static/ && cp -R public/ .next/standalone/public/",
    "start": "node .next/standalone/server.js",
    "prod": "pnpm build && pnpm start",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx --config eslint.config.mjs",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix --config eslint.config.mjs",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "autofix": "pnpm format && pnpm lint:fix"
  },
  "dependencies": {
    "@chakra-ui/react": "^3.27.1",
    "@emotion/react": "^11.14.0",
    "@fontsource/raleway": "^5.2.8",
    "dayjs": "^1.11.18",
    "next": "^15.5.6",
    "next-themes": "^0.4.6",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-icons": "^5.5.0"
  },
  "devDependencies": {
    "@chakra-ui/cli": "^3.27.1",
    "@eslint/js": "^9.37.0",
    "@next/eslint-plugin-next": "^15.5.6",
    "@stylistic/eslint-plugin": "^5.4.0",
    "@types/node": "^22.18.11",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@typescript-eslint/eslint-plugin": "^8.46.1",
    "@typescript-eslint/parser": "^8.46.1",
    "eslint": "^9.37.0",
    "eslint-config-next": "^15.5.6",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.5.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.0",
    "prettier": "^3.6.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.1"
  },
  "prettier": {
    "singleQuote": true,
    "endOfLine": "lf",
    "semi": false,
    "trailingComma": "all",
    "useTabs": false,
    "bracketSpacing": true,
    "printWidth": 120
  }
}
